{
    "selenium_site": {
        "name": "Example News Login",
        "site_url": "https://example.com/login",
        "success_text_class": "alert alert-success",
        "expected_success_text": "Signed in as {{username}}",
        "required_cookies": [
            "sessionid"
        ],
        "login_type": "selenium",
        "selenium_config": {
            "username_selector": "#username",
            "password_selector": "#password",
            "login_button_selector": "button[type='submit']",
            "post_login_selector": "nav .user-avatar",
            "cookies_to_store": [
                "sessionid",
                "csrftoken"
            ]
        }
    },
    "api_site": {
        "name": "Example API Login",
        "site_url": "https://example.com/app",
        "success_text_class": "toast toast-success",
        "expected_success_text": "Welcome back!",
        "required_cookies": [
            "sessionid",
            "refresh_token"
        ],
        "login_type": "api",
        "api_config": {
            "endpoint": "https://example.com/api/v1/login",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json",
                "X-Custom-Header": "{{custom_header}}"
            },
            "body": {
                "username": "{{username}}",
                "password": "{{password}}",
                "remember_me": true
            },
            "cookies": {
                "sessionid": "$.data.session.id",
                "refresh_token": "$.data.tokens.refresh"
            }
        }
    }
}
