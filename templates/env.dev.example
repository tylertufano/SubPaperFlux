# SubPaperFlux Dev profile (.env)
# Copy to env/dev.env (or similar) and reference via docker compose env_file.

SPF_PROFILE=dev
NEXT_PUBLIC_SPF_PROFILE=${SPF_PROFILE}

# API base exposed to the UI
API_BASE=http://localhost:8000
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Local OIDC configuration (replace with your provider)
OIDC_ISSUER=http://localhost/oidc
OIDC_CLIENT_ID=subpaperflux-dev
OIDC_CLIENT_SECRET=dev-secret
OIDC_AUDIENCE=subpaperflux-dev

# Feature toggles
USER_MGMT_CORE=1
USER_MGMT_UI=1
NEXT_PUBLIC_USER_MGMT_UI=1
USER_MGMT_OIDC_ONLY=0
SCIM_ENABLED=0
SCIM_WRITE_ENABLED=1

