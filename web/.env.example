NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_me

OIDC_ISSUER=https://your-issuer/.well-known/openid-configuration
OIDC_CLIENT_ID=replace_me
OIDC_CLIENT_SECRET=replace_me
